{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
