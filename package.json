{
  "name": "@radium/downrepo",
  "version": "0.1.1",
  "description": "Download any GitHub Repo or Sub-Directory.",
  "license": "MIT",
  "author": "VGSEVEN <contact@vgseven.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/silver-radium/downrepo.git"
  },
  "homepage": "https://github.com/silver-radium/downrepo",
  "keywords": [
    "github",
    "git",
    "repository",
    "sub-directory"
  ],
  "module": "index.ts",
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "downrepo": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "engines": {
    "bun": ">=1.1"
  },
  "scripts": {
    "lint": "eslint --no-warn-ignored",
    "lint:check": "bunx @eslint/config-inspector@latest",
    "lint:fix": "eslint --fix --no-warn-ignored",
    "build": "bun build index.ts --outdir ./dist --target node --format esm",
    "optimize": "prettier --write \"**/*.{ts,json,js,md}\" && prettier --check \"**/*.{ts,json,js,md}\"",
    "build:prepare": "bun run optimize && bun run lint && bun run lint:fix && bun run build",
    "release": "changeset publish --tag latest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.5",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.5.0",
    "@types/bun": "^1.1.5",
    "@types/eslint": "^8.56.10",
    "@types/eslint__eslintrc": "^2.1.1",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^9.5.0",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "@octokit/plugin-rest-endpoint-methods": "^13.2.1",
    "axios": "^1.7.2",
    "fs-extra": "^11.2.0",
    "octokit": "^4.0.2",
    "picocolors": "^1.0.1"
  }
}
